<body>
    <!-- header -->
    <div class="container-fluid">
      <div class="row">
        <div id="edaIconCol" class="col-sm-2">
            <a href="/index.html"><img src="../images/eda.png" id="edaIcon" class="img-fluid" alt="Responsive image"></a>
        </div>
        <div id="appName" class="col-sm-10">
          <h3>Carpark App</h3>
          <p>Click on a park when you enter to let people know who's there</p>
          
        </div>
      </div>
        <p> <em>Welcome to the EDA Carpark App</em>!</p>
          <h2><em>Driver Details</em></h2>

          <div> <table id="details" class="table table-striped">
            <thead>
              <tr>
                <th scope="col">Carpark no.</th>
                <th scope="col">Name</th>
                <th scope="col">Registration</th>
                <th scope="col">Mobile</th>
                <th scope="col">Comments</th> 
              </tr>
            </thead>
            <tbody>
              {{#each carparks}}
              <tr>
                <th scope="row" id="1">{{id}}</th>
                <td>{{name}}</td>
                <td>{{rego}}</td>
                <td>{{mobile}}</td>
                <td>{{comments}}</td>
              </tr>
                {{/each}}
                </tbody>
                </table>
               <button type="button" class="float-right">Edit</button>
              <button type="button" class="float-left">Cancel</button>
            </div>

             
      </div>
            
</body>
